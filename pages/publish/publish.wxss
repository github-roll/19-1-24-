page {
  background: #F5F5F5;
}
.row {
  line-height: 50px;
  border-bottom: 1px solid #EAEAEA;
  color: #AFAFAF;
  font-family: '微软雅黑';
  font-size: 17px;
  background: #fff;
}
.row-info {
  white-space: nowrap;
	/*设置内容不换行*/
	text-overflow: ellipsis;
	/*设置文字超出文本框的内容显示成...*/
	overflow: hidden;
  /*设置内容超出隐藏*/
}
.title {
  padding-left: 10px;
  width: 90px;
  float: left;
}
.submit-button {
  margin: 10px 8px 0 8px;
  background: #FF9700;
  line-height: 38px;
  border-radius: 5px;
  text-align: center;
  color: #fff;
}
.info-input {
  height: 50px;
}
.success {
  text-align: center;
  background: #fff;
  line-height: 100px;
  font-size: 16px;
  padding-bottom: 20px;
}
.success-icon {
  position: relative;
  top: 6px;
  margin-right: 10px;
}
.success-button {
  margin: 0 10px;
}