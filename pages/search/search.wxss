page {
  background: #F5F5F5;
}
.search-header {
  background: #03BBD5;
  display: flex;
  position: relative;
  height: 44px;
  padding-top: 10px;
}
.search-input {
  background: #fff;
  position: absolute;
  left: 10px;
  right: 80px;
  border-radius: 4px;
  padding: 0 5px;
}
.search-btn {
  position: absolute;
  right: 0;
  color: #fff;
  width: 60px;
  font-size: 18px;
}
.search-list {
  background: #fff;
  padding: 10px;
  margin-bottom: 8px;
}
.list-title {
  font-size: 16px;
  color: #FF9700;
  margin-bottom: 10px;
}
.list-message {
  font-size: 18px;
  color: #777;
}